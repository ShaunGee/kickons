<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delivery_details_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_cardview_height"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/delivery_card_view_on_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="196dp"
            android:text="on route"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/delivery_card_view_on_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/delivery_card_view_on_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="item name"
            app:layout_constraintStart_toEndOf="@+id/delivery_card_view_on_item_image"
            app:layout_constraintTop_toBottomOf="@+id/delivery_card_view_on_route" />

        <ImageView
            android:id="@+id/delivery_card_view_on_item_image"
            android:layout_width="@dimen/cardview_image_width"
            android:layout_height="@dimen/cardview_image_height"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/delivery_card_view_on_delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="29dp"
            android:text="address"
            app:layout_constraintStart_toEndOf="@+id/delivery_card_view_on_item_image"
            app:layout_constraintTop_toBottomOf="@+id/delivery_card_view_on_item_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>